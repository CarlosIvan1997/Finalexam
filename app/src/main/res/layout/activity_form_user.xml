<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/et_firstName"
        android:layout_marginTop="20dp"
        android:hint="Escriba sus nombres"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <EditText android:id="@+id/et_lastName"
        android:layout_below="@id/et_firstName"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:hint="Escriba sus apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <EditText android:id="@+id/et_age"
        android:layout_below="@id/et_lastName"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="2"
        android:hint="Escriba su edad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText android:id="@+id/et_email"
        android:layout_below="@id/et_age"
        android:layout_marginTop="20dp"
        android:hint="Escriba su correo"
        android:textSize="20sp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <EditText android:id="@+id/et_password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_email"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:hint="Escriba su contraseÃ±a"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <Button android:id="@+id/btn_save"
        android:textSize="30sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
